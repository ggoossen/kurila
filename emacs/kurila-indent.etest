((0) (4))         |'noot'")


(defun kt-is (buffer line exp func)
  (save-excursion
    (set-buffer (get-buffer-create "*kurila-indent-test*"))
    (erase-buffer)
    (insert (eval buffer))
    (kurila-mode)
    (kurila-indent-mode)
    (goto-line line)
    (etest-equality-test 'equal exp func)
    )
)

