#!/usr/local/bin/perl

use Compress::Zlib ;
use strict ;
use warnings ;

#die "Usage: gzcat file...\n"
#    unless @ARGV ;

my $file ;
my $buffer ;

@ARGV = '-' unless @ARGV ;

foreach $file (@ARGV) {
    my $gz = gzopen($file, "rb") 
         or die "Cannot open $file: $gzerrno\n" ;

    print $buffer while $gz->gzread($buffer) > 0 ;

    die "Error reading from $file: $gzerrno" . ($gzerrno+0) . "\n" 
        if $gzerrno != Z_STREAM_END ;
    
    $gz->gzclose() ;
}
