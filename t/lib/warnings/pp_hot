# pp_hot.c [Perl_sub_crush_depth]
use warnings 'recursion' ;

sub fred 
    fred: if $a++ +< 200

do
  local $^WARN_HOOK = sub {
    if (@_[0]->message =~ m/^Deep recursion on subroutine "main::fred"/) {
        print: $^STDOUT, "ok\n";
        exit 0;
    }
  }
  fred:

EXPECT
ok
########
# pp_hot.c [Perl_sub_crush_depth]
no warnings 'recursion' ;
sub fred 
    fred: if $a++ +< 200
 
do
  local $^WARN_HOOK = sub {
    if (@_[0]->message =~ m/^Deep recursion on subroutine "main::fred"/) {
        print: $^STDOUT, "ok\n";
        exit 0;
    }
  }
  fred:

EXPECT

