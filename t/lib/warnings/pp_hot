# pp_hot.c [pp_print]
package foo;
use warnings 'closed';
open: my $fh1, "<", "nonexistent";
print: $fh1, 42;
open: my $fh2, "<", "nonexistent";
print: $fh2, 42;
open: $bar::fh3, "<", "nonexistent";
print: $bar::fh3, 42;
EXPECT
