Check interaction of $^W and lexical

__END__

# Check interaction of $^W and use warnings
sub fred { 
    use warnings ;
    my $b ; 
    chop $b ;
}
do { local $^W = 0 ;
  fred() ;
};

EXPECT
Use of uninitialized value $b in scalar chop at - line 6 character 5.
    main::fred called at - line 9 character 3.
########

# Check interaction of $^W and use warnings
sub fred { 
    use warnings ;
    my $b ; 
    chop $b ;
}
do { $^W = 0 ;
  fred() ;
};

EXPECT
Use of uninitialized value $b in scalar chop at - line 6 character 5.
    main::fred called at - line 9 character 3.
########

# Check interaction of $^W and use warnings
sub fred { 
    no warnings ;
    my $b ; 
    chop $b ;
}
do { local $^W = 1 ;
  fred() ;
};

EXPECT

########

# Check interaction of $^W and use warnings
sub fred { 
    no warnings ;
    my $b ; 
    chop $b ;
}
do { $^W = 1 ;
  fred() ;
};

EXPECT

########

