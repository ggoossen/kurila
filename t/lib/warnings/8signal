# 8signal
BEGIN { $| = 1; $^WARN_HOOK = sub { print "WARN -- $(@_[0]->message)\n" } }
BEGIN { $^DIE_HOOK  = sub { print "DIE -- $(@_[0]->message)\n" } }
$a =+ 1 ;
use warnings < qw(syntax) ;
$a =+ 1 ;
use warnings FATAL => < qw(syntax) ;
$a =+ 1 ;
print "The End.\n" ;
EXPECT
WARN -- Reversed += operator
Reversed += operator at - line 8 character 4.
