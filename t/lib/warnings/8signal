# 8signal
BEGIN { $| = 1; ${^WARN_HOOK} = sub { print "WARN -- {$_[0]->message}" } }
BEGIN { ${^DIE_HOOK}  = sub { print "DIE -- {$_[0]->message}" } }
$a =+ 1 ;
use warnings qw(syntax) ;
$a =+ 1 ;
use warnings FATAL => qw(syntax) ;
$a =+ 1 ;
print "The End.\n" ;
EXPECT
WARN -- Reversed += operator at - line 6.
Reversed += operator at - line 8.
