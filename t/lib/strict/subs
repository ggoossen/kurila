# see if Foo->Bar(...) etc work under strictures
use strict;
package Foo; sub Bar { print "@_\n" }
Foo->Bar('a',1);
Bar Foo ('b',2);
Foo->Bar(qw/c 3/);
Bar Foo (qw/d 4/);
Foo::->Bar('A',1);
Bar Foo:: ('B',2);
Foo::->Bar(qw/C 3/);
Bar Foo:: (qw/D 4/);
EXPECT
Bareword "Foo::" refering to a package are not allowed at - line 9.
########

# Check that barewords on the RHS of a regex match are caught
use strict;
"" =~ foo;
EXPECT
Bareword "foo" not allowed while "strict subs" in use
Execution of - aborted due to compilation errors. at - line 4.
########

